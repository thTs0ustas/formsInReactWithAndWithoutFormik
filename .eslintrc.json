{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "import/no-extraneous-dependencies" : 0,

        "react/jsx-props-no-spreading": 0,
        "camelcase": 0,
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "react/react-in-jsx-scope": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-nested-ternary": 0,
        "react/forbid-prop-types": 0,
        "import/prefer-default-export": 0

    },
    "overrides": [{
        "files": ["*Reducer.js"],
        "rules": {
            "no-param-reassign": 0
        }
    }
]
}
